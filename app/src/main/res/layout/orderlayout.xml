<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:padding="10dp"
    android:background="@color/primary_light">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <TextView
        android:text="Номер"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOrderId"
        android:layout_weight="2"
        android:textSize="20dp"
        android:textColor="#000000"/>

        <TextView
            android:text="Имя"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            />

        <TextView
            android:text="Телефон"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMobile"
            android:textColor="@color/colorAccent"
            android:shadowColor="#000000"
            android:textSize="@dimen/cast_libraries_material_featurehighlight_inner_margin"
            />

        <TextView
            android:text="Описание"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDetail"
            />
    </LinearLayout>


    <LinearLayout android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:text="Дата"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:layout_weight="2"
            android:textSize="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10">




            <TextView
                android:text="Мастер"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMasterName"
                android:textColor="@color/colorAccent"
                />


        </LinearLayout>

        <TextView
            android:text="Цена"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPrice"

            android:layout_weight="2"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="@dimen/cast_libraries_material_featurehighlight_center_horizontal_offset"
            />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxDone"
            android:layout_gravity="left"
            android:text="готов"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
           />




    </LinearLayout>
</LinearLayout>
